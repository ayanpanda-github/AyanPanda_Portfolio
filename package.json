  "description": "Modern, lightweight portfolio website for Ayan Panda",
  "main": "index.html",
  "scripts": {
    "build:blogs": "node scripts/buildBlogs.js",
    "predeploy": "npm run build:blogs",
    "start": "npx serve .",
    "dev": "npx live-server --port=3000 --open=index.html",
    "build": "echo 'No build process needed - static files ready for deployment'",
    "deploy:netlify": "npx netlify deploy --prod --dir .",
    "deploy:vercel": "npx vercel --prod",
    "lighthouse": "npx lighthouse http://localhost:3000 --view",
    "validate": "npx html-validate index.html"
  },
